<%= form_for([@topic, @question]) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>


  <div class="field">
    <%= f.label :information %><br />
    <%= f.text_area :information %>
  </div>

  <div class="field">
    <fieldset>
      <legend>Answers</legend>
      <%= f.fields_for :answers, @question.answers do |a| %>
        <p>
          <%= a.label :name %>
          <%= a.text_field :name %><br>
          <%= a.check_box :is_correct %>
          <%= a.label :is_correct %>
        </p>
      <% end %>
    </fieldset>
  </div>
  <div class="actions">
    <%= f.hidden_field :topic_id %>
    <%= f.submit %>
  </div>
<% end %>
